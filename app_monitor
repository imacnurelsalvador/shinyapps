  get_web_news_lpg <- function(keywords) {
    py_run_string("
      from selenium import webdriver
      from selenium.webdriver.firefox.options import Options
      from selenium.webdriver.common.by import By
      import time
      
      options = Options()
      options.add_argument('--headless')
      driver = webdriver.Firefox(options=options)
      driver.get('https://www.laprensagrafica.com/seccion/elsalvador')
      time.sleep(5)
      els = driver.find_elements(By.TAG_NAME, 'h2')
      titulos = [e.text for e in els if e.text.strip() != '']
      driver.quit()
      titulos_r = titulos
        ")
    
    titulares?webscrap <- py$titulos_r
    
    if (length(titulares) == 0) return(data.frame())
    
    pattern <- paste(keywords, collapse = "|")
    relevantes <- grep(pattern, tolower(titulares), value = TRUE)
    
    if (length(relevantes) == 0) {
      return(data.frame(
        title = character(0),
        link = character(0),
        description = character(0),
        pubDate = as.POSIXct(character(0)),
        location = character(0),
        source = character(0),
        source_url = character(0),
        stringsAsFactors = FALSE
      ))
    }
    data.frame(
      title = relevantes,
      link = NA,
      description = NA,
      pubDate = Sys.time(),
      location = NA,
      source = "La Prensa Gráfica (Web)",
      source_url = "https://www.laprensagrafica.com/seccion/elsalvador",
      stringsAsFactors = FALSE
    )
  }
}

