  regex_alto <- paste(peligro_alto, collapse = "|")
  regex_medio <- paste(peligro_medio, collapse = "|")
  regex_bajo <- paste(peligro_bajo, collapse = "|")
  
  output$incident_details <- renderUI({
    sel <- input$incidents_table_rows_selected
    req(length(sel) == 1)
    it <- rss_data()[sel, ]
    
    
    alto_stem <- lemmatize_words(peligro_alto)
    medio_stem <- lemmatize_words(peligro_medio)
    bajo_stem <- lemmatize_words(peligro_bajo)
    
    
    
    # Suponiendo que it$title es una cadena de texto
    titulo <- tolower(it$title)
    
    # risk_level  <- if (grepl(regex_alto, titulo)) {
    #   "Alto"
    # } else if (grepl(regex_medio, titulo)) {
    #   "Medio"
    # } else if (grepl(regex_bajo, titulo)) {
    #   "Bajo"
    # } else {
    #   "No clasificado"
    # }
    # 
    
    
    palabras <- unlist(strsplit(tolower(titulo), "\\s+"))
    palabras <- palabras[!palabras %in% stopwords("es")]
    palabras_lemmas <- lemmatize_words(palabras)
    print(palabras_lemmas)
    print(alto_stem)
    
    # Verificar similitud con cada nivel
    risk_level  <-  if (any(sapply(palabras_lemmas, function(p) any(RecordLinkage::levenshteinSim(p, alto_stem) >= 0.7)))) {
       "Alto"
    } else if (any(sapply(palabras_lemmas, function(p) any(RecordLinkage::levenshteinSim(p, medio_stem) >= 0.7)))) {
      "Medio"
    } else if (any(sapply(palabras_lemmas, function(p) any(RecordLinkage::levenshteinSim(p, bajo_stem) >= 0.7)))) {
      "Bajo"
    } else {
      "No clasificado"
    }
    # # Determinar nivel de riesgo basado en palabras clave
    # risk_level <- if (grepl("homicidio|asesinato", tolower(it$title))) "Alto" else
    #   if (grepl("robo|asalto", tolower(it$title))) "Medio" else "Bajo"
    
    tagList(
      h3(it$title),
      p(strong("Fuente: "), it$source),
      p(strong("Ubicación estimada: "), it$location),
      p(strong("Fecha: "), format(it$pubDate, "%Y-%m-%d %H:%M")),
      p(strong("Nivel de riesgo: "), span(risk_level, 
                                          style = if (risk_level == "Alto") "color:red;font-weight:bold" else
                                            if (risk_level == "Medio") "color:orange" else "color:green")),
      if (!is.na(it$description)) div(HTML(it$description)),
      if (!is.na(it$link)) a("Ver noticia completa", href = it$link, 
                             target = "_blank", class = "btn btn-primary")
    )
  })
  
